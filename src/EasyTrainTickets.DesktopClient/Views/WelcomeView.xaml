<UserControl x:Class="EasyTrainTickets.DesktopClient.Views.WelcomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EasyTrainTickets.DesktopClient.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Easy Train Tickets" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="50" FontFamily="Script MT Bold"/>
        <Image Grid.Row="1" Source="/Resources/trainLogo.png"/>
    </Grid>
</UserControl>
